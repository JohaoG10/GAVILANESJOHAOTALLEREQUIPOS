@model IEnumerable<GAVILANESJOHAOTALLEREQUIPOS.Models.Jugador>
@{
    ViewData["Title"] = "Index";
}

<h1>JUGADORES</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">CREAR UN NUEVO JUGADOR</a>
</p>

<!-- Formulario de filtro -->
<form method="get" class="mb-3">
    <div class="form-row align-items-end">
        <div class="col-md-6 mb-2">
            <label for="equipoId">Filtrar por Equipo:</label>
            <select name="equipoId" id="equipoId" class="form-control">
                <option value="">Seleccione un equipo</option>
                @foreach (var equipo in ViewBag.Equipos)
                {
                    <option value="@equipo.Value">@equipo.Text</option>
                }
            </select>
        </div>
        <div class="col-md-2 mb-2">
            <button type="submit" class="btn btn-info">Filtrar</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipo.Nombre)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IdJugador">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdJugador">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdJugador">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
