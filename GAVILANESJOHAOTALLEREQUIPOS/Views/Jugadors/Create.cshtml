@model GAVILANESJOHAOTALLEREQUIPOS.Models.Jugador

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-size: 2.5em; font-weight: bold; color: #2C3E50; text-align: center; border-bottom: 2px solid #2C3E50; padding-bottom: 10px; margin-bottom: 20px;">
    CREA A UN NUEVO JUGADOR
</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posicion" class="control-label"></label>
                <input asp-for="Posicion" class="form-control" />
                <span asp-validation-for="Posicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEquipo" class="control-label">Seleccione un Equipo:</label>
                <select asp-for="IdEquipo" class="form-control" asp-items="ViewBag.IdEquipo"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Jugador" class="btn" style="background-color: white; color: black; border: 2px solid #2C3E50; padding: 10px 20px; font-weight: bold;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="font-size: 1.2em; color: #3498DB; text-decoration: underline;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
